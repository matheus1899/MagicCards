<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#CCC"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <ImageView
        android:id="@+id/item_card_img"
        android:layout_width="88dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginVertical="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/card_example" />
    <TextView
        android:id="@+id/item_card_txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:paddingVertical="4dp"
        android:paddingHorizontal="8dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintBottom_toTopOf="@+id/item_card_txt_type_line"
        app:layout_constraintStart_toEndOf="@+id/item_card_img"
        app:layout_constraintTop_toTopOf="@+id/item_card_img"
        tools:text="Brushfire Elemental"/>
    <TextView
        android:id="@+id/item_card_txt_type_line"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:paddingVertical="4dp"
        android:paddingHorizontal="8dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_card_txt_name"
        app:layout_constraintBottom_toBottomOf="@+id/item_card_img"
        app:layout_constraintStart_toEndOf="@+id/item_card_img"
        tools:text="Creature - Elemental" />
</androidx.constraintlayout.widget.ConstraintLayout>