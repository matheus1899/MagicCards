<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#4C413E"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/card_back_oval"
        android:layout_margin="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/splash_img_magic"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:layout_constraintBottom_toTopOf="@+id/splash_guideline_h_1"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/splash_guideline_h_1"
        app:srcCompat="@drawable/ic_magic_brown" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/splash_guideline_h_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_percent="0.3"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/splash_guideline_h_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />

    <ImageView
        android:id="@+id/splash_img_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/splash_guideline_h_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_white_mana_no_bg"
        app:tint="@color/white_mana_splash" />

    <ImageView
        android:id="@+id/splash_img_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/splash_img_white"
        app:layout_constraintTop_toTopOf="@+id/splash_guideline_h_2"
        app:srcCompat="@drawable/ic_blue_mana_no_bg"
        app:tint="@color/blue_mana_splash"/>

    <ImageView
        android:id="@+id/splash_img_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toStartOf="@+id/splash_img_blue"
        app:layout_constraintStart_toEndOf="@id/splash_img_red"
        app:layout_constraintTop_toBottomOf="@+id/splash_img_blue"
        app:srcCompat="@drawable/ic_black_mana_no_bg"
        app:tint="@color/black_mana_splash" />

    <ImageView
        android:id="@+id/splash_img_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toStartOf="@+id/splash_img_black"
        app:layout_constraintStart_toEndOf="@+id/splash_img_green"
        app:layout_constraintTop_toTopOf="@+id/splash_img_black"
        app:srcCompat="@drawable/ic_red_mana_no_bg"
        app:tint="@color/red_mana_splash" />

    <ImageView
        android:id="@+id/splash_img_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toStartOf="@+id/splash_img_white"
        app:layout_constraintTop_toTopOf="@+id/splash_guideline_h_2"
        app:srcCompat="@drawable/ic_green_mana_no_bg"
        app:tint="@color/green_mana_splash"/>
</androidx.constraintlayout.widget.ConstraintLayout>